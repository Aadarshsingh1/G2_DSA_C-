#include <iostream>
using namespace std;

int main() {
    int n ;
    cin>>n;
    int i = 0;

    while (i < n) {
        int j = 0;

        
        while (j < n - i) {
            cout << (j + 1) << " ";
            j++;
        }

        
        j = 0;
        while (j < 2*i) {
            cout << "* ";
            j++;
        }

       
        j = n - i - 1;
        while (j >= 0) {
            if (j != n - i)
                cout << (j+1) << " ";
            j--;
        }

        cout << endl;
        i++;
    }

    return 0;
}
    
